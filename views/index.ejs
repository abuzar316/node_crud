<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include('layout/header') %>
        <div class="container my-4">
          
            <div class="table-responsive">
                <% if(users != ' ') { %>
                    <table class="table table-bordered table-striped table-hover text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row,index)=>{ %>
                                <tr class="align-middle">
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td><img src="<%= row.image %>" width="50" class="img-thumnail"></td>
                                    <td>
                                        <%= row.name %>
                                    </td>
                                    <td>
                                        <%= row.email %>
                                    </td>
                                    <td>
                                        <%= row.phone %>
                                    </td>1
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% }else { %>
                        <h1 class="text-center text-secoundary mt-5">No user found in db</h1>
                        <% } %>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>